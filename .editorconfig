# Configurações padrão para todos os arquivos
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Configurações específicas para arquivos JavaScript e TypeScript
[*.js]
indent_style = space
indent_size = 2

[*.jsx]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2

# Configurações específicas para arquivos JSON
[*.json]
indent_style = space
indent_size = 2
